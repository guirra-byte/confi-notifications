generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Subscriber {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  name  String
  email String @unique

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Topic {
  id          String  @id @default(auto()) @map("_id") @db.ObjectId
  domain      String  @unique
  description String?

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model Notification {
  id      String @id @default(auto()) @map("_id") @db.ObjectId
  subject String

  topicId String @map("topic_id") @db.ObjectId

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model TopicNotification {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  topicId        String @map("topic_id") @db.ObjectId
  notificationId String @map("notification_id") @db.ObjectId

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model SubscriberTopic {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  subscriberId String @map("subscriber_id") @db.ObjectId
  topicId      String @map("topic_id") @db.ObjectId

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
}

model SubscriberNotification {
  id String @id @default(auto()) @map("_id") @db.ObjectId

  isSent Boolean   @default(false) @map("is_sent")
  sentAt DateTime? @map("sent_at")

  isRead Boolean   @default(false) @map("is_read")
  readAt DateTime? @map("read_at")

  isDeleted Boolean   @default(false) @map("is_deleted")
  deletedAt DateTime? @map("deleted_at")

  subscriberId   String @map("subscriber_id") @db.ObjectId
  notificationId String @map("notification_id") @db.ObjectId

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([subscriberId, notificationId])
  @@index([subscriberId])
  @@index([notificationId])
}
